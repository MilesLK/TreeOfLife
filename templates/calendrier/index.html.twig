{% extends 'base.html.twig' %}

{% block title %}Calendrier des évènements{% endblock %}


{% block stylesheets %}
<style>
body {
    background: rgb(36,119,152);
    background: radial-gradient(circle, rgba(36,119,152,1) 49%, rgba(154,206,255,1) 100%);
}

#calendrier{
    margin: 30px
}

/* Changer la couleur du calendrier */
.fc-daygrid-day-number {
    color: white !important;
    text-decoration: none
}

.fc-col-header-cell-cushion {
    color: black;
    text-decoration: none
}

.fc-event-title, .fc-event-time {
    color: black !important;
}
</style>
{% endblock %}

{% block body %}
<div id="calendrier"></div>

{% endblock %}

{# Initialisation du calendrier dans la vue #}
{% block javascripts %}
 <script>
 window.onload = () => {
    let calendarElt = document.querySelector("#calendrier")
    let calendar = new FullCalendar.Calendar(calendarElt, {
        initialView: 'dayGridMonth',
        locale: 'fr',
        timeZone: 'Europe/Paris',
        headerToolbar: {
            start: 'prev',
            center: 'title',
            end: 'next,dayGridMonth,timeGridWeek'
        },
        events: {{data | raw}},
        eventTextColor: 'black', // ✅ texte noir pour tous les events
        editable: true,
    })

    calendar.render();
 }
</script>
{% endblock %}
